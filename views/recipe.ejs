<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head'); %>
    <link rel="stylesheet" href="css/recipe.css">
</head>
<body class="body">
    <%- include('partials/navbar'); %>

    <!-- Products -->

    <div class="container-fluid">
        <!-- Recipes -->
        <div class="row">
            <main >
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2 title orange">Recettes</h1>
            </div>
            <div class="card mb-3" style="max-width: 100%;">
                <%  if (recipeMenu.length != 0) { %>
                    <% recipeMenu.forEach((recipes, index) => { %>
                        <div class="row no-gutters">
                            <div class="col-md-4 img_flex">
                              <img src="images/Cassoulet 4.jpg" class="card-img image" alt="...">
                            </div>
                            <div class="col-md-8"> 
                              <div class="card-body">
                                <h2 class="card-title"><%=recipes.recipe_name_fr%></h2>
                                <% if (Ingredients.length != 0) { %>
                                    <% Ingredients.forEach((ingredient, index) => { %>
                                        <% if (index == 0) { %>
                                        <h4><%=ingredient%></h4>
                                        <% } else { %>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                            <label class="form-check-label strikethrough" for="flexCheckDefault">
                                              <%=ingredient%> 
                                            </label>
                                        </div>
                                   <% }}) %>
                                <% } %>
                              </div>
                              <div class="card-body">
                                <% if (Preparation.length != 0) { %>
                                    <% Preparation.forEach((preparation, index) => { %>
                                        <p><%=preparation%></p>
                                    <% }) %>
                                <% } %>
                              </div>
                            </div>
                        </div>
                        <!-- <div class="row ">
                            
                        </div> -->
                        
                    <% }) %>
                <% } %>
            </div>
  

            </main>
        </div>
    </div>

    <%- include('partials/footer.ejs'); %>
    
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
